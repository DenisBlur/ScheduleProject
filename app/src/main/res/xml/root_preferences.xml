<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="Основное">
        <ListPreference
            android:entries="@array/site"
            android:entryValues="@array/site_st"
            android:key="_site_list"
            android:title="Площадка"
            app:iconSpaceReserved="false" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="_main_one_day_switch"
            android:title="Загружать расписание на день"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="Оформление">

        <ListPreference
            android:entries="@array/design_color"
            android:entryValues="@array/design_color_st"
            android:key="_design_color_list"
            android:title="Цвет приложения"
            app:iconSpaceReserved="false" />

        <ListPreference
            android:entries="@array/theme_lds"
            android:entryValues="@array/theme_lds_st"
            android:key="_theme_lds_list"
            android:title="Тема приложения"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
